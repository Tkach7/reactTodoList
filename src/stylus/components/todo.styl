.todo
    border 1px solid #ccc
    width 80%
    position absolute
    top 20%
    right 0
    left 0
    margin 0 auto
    padding 30px
    
    &__title
        text-align center
        font-size 1.9em
        
    &__item
        display flex
        justify-content space-between
        border-bottom 1px solid #ccc
        padding 10px
        font-size 22px
        
        &.item--edit-mode
            border-bottom 1px solid red
        
        &__value
            outline none
            border none
            padding 0
            font 22px 'Alegreya', sans-serif
            &.item__value--not-active
                display none
        
        &__change
            outline none
            border none
            padding 0
            font 22px 'Alegreya', sans-serif
            width 80%
                        
            &.item__change--not-active
                display none                
    
    &__panel
        margin-top 20px
        display flex
        justify-content space-between
        
    &__add
        padding 10px
        border-radius 20px
        border none
        cursor pointer
        outline none
    
    &__new
        width: 70%
        border-top none
        border-left none
        border-right none
        font-size 15px
        outline none
        padding 0 10px
        
            

    